block dialog
  .masklayer
  .dialog.log
    span.btn-close.ti 关闭
    h2.title 欢迎小伙伴参加年会，告诉火马你是谁~
    input(type="text", class="tel", placeholder="请输入手机号")
    input(type="text", class="verify", placeholder="请输入验证码")
    //- .get 获取验证码
    .get.countdown 59s
    a(href="###").btn-login 登录
  .dialog.ex
    span.btn-close.ti 关闭
    h2.title.mt1 当前可兑换600积分哦~
    p.info 请确认已从工作人员处领取到X000积分牌。<br>(积分扣除后，不可恢复哦！)
    a(href="###").btn-yes 是的，已拿到积分牌
    a(href="###").btn-no 还没有拿到积分牌

append script
  //- script(src="scripts/vue.js")
  script.
    (function($){
      //! 记住密码
      $("body").on("click", '.check-wrap:not(.noclick)', function() {
        $(this).parents('.team-ul').find('.check-wrap').attr('class', 'check-wrap')
        $(this).parents('.team-ul').find('.uncheck').each(function(){
          this.checked = false;
        })
        if ($(this).hasClass('check-on')) {
          $(this).removeClass("check-on");
        } else {
          $(this).addClass('check-on');
          $(this).find('.uncheck')[0].checked = true;
        }
      });

      //! 显示、隐藏弹出层
      var GLOBAL = {
        show: function($obj){
          $obj.show();
          $('.masklayer').show();
        },
        hide: function($obj){
          $obj.hide();
          $('.masklayer').hide();
        }
      };

      $('body').on('click', '.btn-submit', function(event){
        alert(1);
        // event.preventDefault();
        // GLOBAL.show($('.log'));
      });

      $('body').on('click', '.refresh', function(event){
        window.location.reload();
      });

      //! 隐藏弹层
      $('body').on('click', '.masklayer, .btn-close, .btn-login, .btn-yes, .btn-no', function(event){
        event.preventDefault();
        GLOBAL.hide($('.dialog'));
      });


      $("body").on("click", '.login', function(event) {
        event.preventDefault();
        GLOBAL.show($(".log"));
      });

      $("body").on("click", '.exchange', function(event) {
        event.preventDefault();
        GLOBAL.show($(".ex"));
      });
    })(jQuery);
      
