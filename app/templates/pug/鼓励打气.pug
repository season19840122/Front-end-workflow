block dialog
  .masklayer
  .dialog.toast
    p.modal-c 玩家游戏已结束，不可打气，请刷新！
  .dialog
    h4.modal-t 提示
    p.modal-c 扣除1000顺豆为TA打气？
    a(href="javascript:void(0);", class="btn-buy") 确定
    a(href="javascript:void(0);", class="btn-cancel") 取消
append script
  //- script(src="scripts/_vue.js")
  script.
    (function($){
      var GLOBAL = {
        show: function($obj){
          $obj.fadeIn(200);
          $('.masklayer').show();
        },
        hide: function($obj){
          $obj.fadeOut(200);
          $('.masklayer').hide();
        }
      };

      var load = function(){
          var flag = $('nav').data('pageflag');
          if(flag === 2){
              $('.tab').eq(1).addClass('select').siblings('.tab').removeClass('select');
              $('.content').eq(1).show().siblings('.content').hide();
          }
      }();
        
      $('body').on('click', '.tab', function(event){
        $(this).addClass('select').siblings('.tab').removeClass('select');
        var index = $(this).index();
        $('.a-wrap').eq(0).find('a').eq(index).show().siblings().hide();
        $('.content').eq(index).show().siblings('.content').hide();
      });

      $('body').on('click', '.encourage', function(event){
        $(this).hide().siblings().show();
        $('.toast').fadeIn(800).delay(1000).fadeOut(800);
        //- alert('今天的打气次数已用完，明天继续！');
        //- alert('玩家游戏已结束，不可打气，请刷新！');
      });

      // 隐藏弹层
      $('body').on('click', '.masklayer, .dialog .btn-buy, .dialog .btn-cancel', function(event){
        event.preventDefault();
        GLOBAL.hide($('.dialog'));
      });
      
      // 弹层
      $('body').on('click', '.encourage', function(event){
        event.preventDefault();
        GLOBAL.show($(".dialog").eq(1));
      });

      $('body').on('click', '.change, .refresh', function(event){       
        var index = $(this).index() + 1;
        window.location.href = window.location.href.slice(0,-1) + index;
      });

    })(jQuery);
      
